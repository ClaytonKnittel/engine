{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++17",
                "-O0",
                "-o",
                "rel",
                "src/main.cpp",
                "src/vecmath.cpp",
                "src/input.cpp",
                "src/camera.cpp",
                "src/shader.cpp",
                "src/objLoader.cpp",
                "src/stb_image.cpp",
                "-Iinclude",
                "-lglew.2.1",
                "-lglfw.3.2",
                "-lm",
                "-framework",
                "OpenGL"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}